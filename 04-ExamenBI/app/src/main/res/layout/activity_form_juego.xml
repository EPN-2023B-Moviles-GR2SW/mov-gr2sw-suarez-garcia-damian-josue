<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormJuego">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="CREAR JUEGO"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_multiplayer_juego"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginBottom="172dp"
        android:ems="10"
        android:hint="Â¿Es Multiplayer?"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_fecha_juego"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Fecha de Lanzamiento"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_precio_juego"
        app:layout_constraintEnd_toEndOf="@+id/input_precio_juego"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_precio_juego" />

    <EditText
        android:id="@+id/input_id_juego"
        android:layout_width="257dp"
        android:layout_height="46dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="ID de Juego"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_juego"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_juego"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_juego"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/input_precio_juego"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_multiplayer_juego"
        app:layout_constraintEnd_toEndOf="@+id/input_multiplayer_juego"
        app:layout_constraintStart_toStartOf="@+id/input_multiplayer_juego" />

    <EditText
        android:id="@+id/input_nombre_juego"
        android:layout_width="258dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Nombre del Juego"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_fecha_juego"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_juego"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_juego" />

    <Button
        android:id="@+id/btn_add_juego"
        android:layout_width="115dp"
        android:layout_height="66dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#F9F9F9"
        android:text="CREAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancelar_juego"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cancelar_juego"
        android:layout_width="124dp"
        android:layout_height="68dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#F9F9F9"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>